root = true

[*]
indent_style = space
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 2
max_line_length = 120

[*.{cs,csx}]
indent_size = 4

[*.sh]
end_of_line = lf
max_line_length = 9999

[*.cmd]
max_line_length = 9999

[*.csproj]
insert_final_newline = false
charset = utf-8-bom
